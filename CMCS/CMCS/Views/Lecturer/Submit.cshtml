@model CMCS.Models.ViewModels.SubmitClaimVm
@{
    ViewData["Title"] = "Submit Claim";
}

<div class="container mt-4">
    <div class="card p-4 shadow-sm border-0 bg-white">
        <h2 class="text-center fw-bold mb-4 text-primary">
            <i class="bi bi-file-earmark-text"></i> Submit Your Claim
        </h2>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success text-center shadow-sm rounded">
                <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            </div>
        }

        <form asp-action="Submit" enctype="multipart/form-data" method="post" class="row g-4 needs-validation" novalidate>

            <!-- Lecturer Information -->
            <div class="col-md-6">
                <label asp-for="LecturerName" class="form-label fw-semibold">Lecturer Name</label>
                <input asp-for="LecturerName" class="form-control border-primary" placeholder="Enter your full name" required />
                <span asp-validation-for="LecturerName" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="LecturerId" class="form-label fw-semibold">Lecturer ID</label>
                <input asp-for="LecturerId" class="form-control border-primary" placeholder="Enter your Lecturer ID" required />
                <span asp-validation-for="LecturerId" class="text-danger small"></span>
            </div>

            <!-- Claim Details -->
            <div class="col-md-4">
                <label asp-for="Month" class="form-label fw-semibold">Claim Month</label>
                <input asp-for="Month" type="month" class="form-control border-primary" required />
                <span asp-validation-for="Month" class="text-danger small"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="HoursWorked" class="form-label fw-semibold">Hours Worked</label>
                <input asp-for="HoursWorked" type="number" step="0.1" min="0" class="form-control border-primary" placeholder="e.g. 35.5" required />
                <span asp-validation-for="HoursWorked" class="text-danger small"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="HourlyRate" class="form-label fw-semibold">Hourly Rate (R)</label>
                <input asp-for="HourlyRate" type="number" step="0.01" min="0" class="form-control border-primary" placeholder="e.g. 150.00" required />
                <span asp-validation-for="HourlyRate" class="text-danger small"></span>
            </div>

            <!-- Notes -->
            <div class="col-12">
                <label asp-for="Notes" class="form-label fw-semibold">Additional Notes (Optional)</label>
                <textarea asp-for="Notes" class="form-control border-primary" rows="3" placeholder="Add any relevant details or remarks..."></textarea>
                <span asp-validation-for="Notes" class="text-danger small"></span>
            </div>

            <!-- File Upload -->
            <div class="col-12">
                <label asp-for="FileUploads" class="form-label fw-semibold">Upload Supporting Documents</label>
                <input asp-for="FileUploads" type="file" class="form-control border-primary" multiple accept=".pdf,.doc,.docx,.png,.jpg,.jpeg" />
                <small class="text-muted">Accepted file types: PDF, Word, or Images (multiple uploads allowed).</small>
                <span asp-validation-for="FileUploads" class="text-danger small"></span>
            </div>

            <!-- Submit Button -->
            <div class="col-12 text-center mt-4">
                <button type="submit" class="btn btn-primary px-5 py-2 shadow-sm">
                    <i class="bi bi-upload"></i> Submit Claim
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
