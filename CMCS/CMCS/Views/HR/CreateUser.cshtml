@model CMCS.Models.AppUser

<div class="container mt-4">
    <h2 class="fw-bold text-primary mb-3">
        <i class="bi bi-person-plus"></i> Add New User
    </h2>

    <form asp-action="CreateUser" method="post">
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" />
            </div>
            <div class="col-md-6">
                <label>Password</label>
                <input asp-for="PasswordHash" type="password" class="form-control" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="col-md-3">
                <label asp-for="HourlyRate"></label>
                <input asp-for="HourlyRate" class="form-control" />
            </div>

            <div class="col-md-3">
                <label asp-for="Role"></label>
                <select asp-for="Role" class="form-select"
                        asp-items="Html.GetEnumSelectList<CMCS.Models.UserRole>()">
                    <option value="">-- Select Role --</option>
                </select>
            </div>
        </div>

        <button class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
