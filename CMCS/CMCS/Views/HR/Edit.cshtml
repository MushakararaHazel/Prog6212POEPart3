@model CMCS.Models.AppUser

@{
    ViewData["Title"] = "Edit User";
}

<div class="container mt-5">
    <h2 class="mb-4">
        <i class="bi bi-pencil-square"></i> Edit User
    </h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="row">
            <!-- Username -->
            <div class="col-md-6 mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" />
            </div>

            <!-- Password (optional) -->
            <div class="col-md-6 mb-3">
                <label class="form-label">Password (leave blank to keep existing)</label>
                <input name="password" type="password" class="form-control" />
            </div>
        </div>

        <div class="row">
            <!-- First Name -->
            <div class="col-md-6 mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
            </div>

            <!-- Last Name -->
            <div class="col-md-6 mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
            </div>
        </div>

        <div class="row">
            <!-- Email -->
            <div class="col-md-6 mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>

            <!-- Hourly Rate -->
            <div class="col-md-6 mb-3">
                <label asp-for="HourlyRate" class="form-label"></label>
                <input asp-for="HourlyRate" class="form-control" />
            </div>
        </div>

        <div class="row">
            <!-- Role Dropdown -->
            <div class="col-md-6 mb-3">
                <label asp-for="Role" class="form-label"></label>
                <select asp-for="Role"
                        asp-items="Html.GetEnumSelectList<CMCS.Models.UserRole>()"
                        class="form-select">
                </select>
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary me-2">Update</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
