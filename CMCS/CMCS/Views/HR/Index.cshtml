@model IEnumerable<CMCS.Models.AppUser>

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-people"></i> User Management
        </h2>

        <div>
            <a asp-action="GeneratePdf" class="btn btn-success me-2">
                <i class="bi bi-filetype-pdf"></i> Download Report
            </a>

            <a asp-action="CreateUser" class="btn btn-primary">
                <i class="bi bi-person-plus"></i> Add User
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <table class="table table-bordered table-striped text-center align-middle">
        <thead class="table-primary">
            <tr>
                <th>Username</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Hourly Rate</th>
                <th>Role</th>
                <th style="width: 200px;">Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.Username</td>
                    <td>@u.FirstName @u.LastName</td>
                    <td>@u.Email</td>
                    <td>@u.HourlyRate.ToString("N2")</td>
                    <td>@u.Role</td>

                    <td>
                        <div class="btn-group">
                            <a asp-action="Edit"
                               asp-route-id="@u.Id"
                               class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-square"></i>
                            </a>

                            <a asp-action="GeneratePdf"
                               class="btn btn-success btn-sm">
                                <i class="bi bi-file-earmark-arrow-down"></i>
                            </a>

                            <form asp-action="Delete"
                                  asp-route-id="@u.Id"
                                  method="post"
                                  onsubmit="return confirm('Delete this user?');">
                                <button class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>


