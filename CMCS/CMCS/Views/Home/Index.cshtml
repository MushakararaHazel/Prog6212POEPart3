@{
    ViewData["Title"] = "CMCS – Dashboard";
}

<div class="container mt-5">

    <!-- Header -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary">
            <i class="bi bi-app-indicator"></i>
            Contract Monthly Claim System
        </h1>
        <p class="lead text-muted">
            Welcome to the CMCS Dashboard. Submit, Track, and Verify monthly claims effortlessly.
        </p>
    </div>


    <!-- Stats Section -->
    <div class="row g-4 justify-content-center mb-5">

        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center p-3">
                <h4 class="fw-bold text-primary">
                    <i class="bi bi-file-earmark-text"></i> Total Claims
                </h4>
                <h2 class="fw-bold text-dark">@ViewBag.TotalClaims</h2>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center p-3">
                <h4 class="fw-bold text-warning">
                    <i class="bi bi-hourglass-split"></i> Pending
                </h4>
                <h2 class="fw-bold">@ViewBag.Pending</h2>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center p-3">
                <h4 class="fw-bold text-success">
                    <i class="bi bi-check2-circle"></i> Approved
                </h4>
                <h2 class="fw-bold">@ViewBag.Approved</h2>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 text-center p-3">
                <h4 class="fw-bold text-danger">
                    <i class="bi bi-x-circle"></i> Rejected
                </h4>
                <h2 class="fw-bold">@ViewBag.Rejected</h2>
            </div>
        </div>

    </div>


    <!-- Navigation Buttons -->
    <div class="text-center mb-5">
        <a asp-controller="Lecturer" asp-action="Submit" class="btn btn-primary">
            <i class="bi bi-cloud-upload"></i> Submit Claim
        </a>

        <a asp-controller="Lecturer" asp-action="TrackClaim" class="btn btn-outline-primary">
            <i class="bi bi-list-task"></i> Track Claims
        </a>

        <a asp-controller="Coordinator" asp-action="Pending" class="btn btn-success">
            <i class="bi bi-check-circle"></i> Verify Claims
        </a>

    </div>

    <!-- Footer -->
    <footer class="text-center mt-5 text-muted">
        <small>
            © 2025 Contract Monthly Claim System (CMCS)
            <br />
            Empowering efficiency through digital transformation.
        </small>
    </footer>
</div>
