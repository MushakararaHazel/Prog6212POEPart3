@using Microsoft.AspNetCore.Http
@using CMCS.Models
@{
    var username = Context.Session.GetString("Username");
    var roleString = Context.Session.GetString("UserRole");
    Enum.TryParse<UserRole>(roleString, out UserRole role);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
</head>

<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm" style="background-color:#0d6efd;">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                <i class="bi bi-flower2"></i> CMCS
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    @if (!string.IsNullOrEmpty(username))
                    {
                        if (role == UserRole.Lecturer)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Lecturer" asp-action="Submit">Submit</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Lecturer" asp-action="Track">Track</a></li>
                        }
                        else if (role == UserRole.Coordinator)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Coordinator" asp-action="Pending">Coordinator</a></li>
                        }
                        else if (role == UserRole.Manager)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Manager" asp-action="Approved">Manager</a></li>
                        }
                        else if (role == UserRole.HR)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="HR" asp-action="Index">HR – Users</a></li>
                        }
                    }
                </ul>

                <ul class="navbar-nav ms-auto">
                    @if (string.IsNullOrEmpty(username))
                    {
                        <li class="nav-item">
                            <a class="btn btn-outline-light" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right"></i> Login
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item me-2 align-self-center text-white">
                            <i class="bi bi-person-circle"></i> @username (@role)
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="btn btn-outline-light">
                                    <i class="bi bi-box-arrow-right"></i> Logout
                                </button>
                            </form>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>

    <!-- BODY OF PAGE -->
    <main class="container mt-5">
        @RenderBody()
    </main>

    <footer class="text-center text-muted mt-4 mb-3">
        © @DateTime.Now.Year Contract Monthly Claim System (CMCS)
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

